{{!-- Community reviews live here like the facebook feed --}}
{{!-- homepage should have reviews and job tracking cards --}}


<form class="row g-3 new-project-form ms-5">

    <div class="">
      <h3>Create a Review: </h3>
      <input class="form-input form-control-lg input-group-md col-3" type="text" placeholder="Company Name"id="name" name="review-name" />
    </div>
   
     <div class="">
      <textarea maxlength="150" class="form-input form-control-lg col-lg-3" placeholder="Review"id="review-text" name="review"></textarea>
    </div>
    <div class="">
      <button type="submit" id="review-button" class="btn btn-primary">Create</button>
    </div>
    
</form>



{{#if reviews.length}}
<div class="container mt-5">
{{#each reviews as |review| }}
<div class="card  mb-3 shadow rounded" style="max-width: 18rem;">
    <div class="card-header text-white bg-primary">Created by {{review.user.first_name}} {{review.users.last_name}} on {{format_date review.date_created}}</div>
  <div class="reviw-card-body card-body">
    <h5 class="card-title text-center">{{review.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{company}}</h6>
    <div class="text-container"><p class="card-text">{{review.review_text}}.</p></div>
  </div>
</div>
{{/each}}</div>
{{/if}}
<script src="./js/feed.js"></script>