{{!-- Community reviews live here like the facebook feed --}}
{{!-- homepage should have reviews and possible job tracking cards --}}
{{#if reviews.length}}
<div class="card" style="width: 18rem;">
    {{#each reviews as |review| }}
    <div class="card-header">Created by {{job.user.name}} on {{job.date.created}}</div>
  <div class="card-body">
    <h5 class="card-title">{{reviews.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{review.users.name}}</h6>
    <p class="card-text">{{review.review_text}}.</p>
    {{!-- need to use the data-id to target a review and deltet that one --}}
    <button class="btn btn-sm btn-danger" data-id="{{review.id}}">DELETE</button>
    <button class="btn btn-sm btn-light" data-id="{{review.id}}">Update</button>
  </div>
  {{/each}}
</div>
{{/if}}