{{!-- sets up how the login page looks --}}
<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

<form class="row g-3 form login-form">
  <div class="col-md-6 form-group">
    <label for="email-login" class="form-label">Email</label>
    <input type="email" class="form-control form-input" id="email-login">
  </div>
  <div class="col-md-6 form-group">
    <label for="password-login" class="form-label">Password</label>
    <input type="password" class="form-control form-input" id="password-login">
  </div>
   <div class="col-12 form-group">
    <button type="submit" class="btn btn-primary" id="login-button">Sign in</button>
  </div>
  </form>


  <div class="col-md-6">
    <h2>Signup</h2>

    <div class="row g-3 form signup-form">
  <div class="col-auto form-group">
    <input type="text" class="form-control form-input" id="first_name-signup" placeholder="First name" aria-label="First name">
  </div>
  <div class="col-auto form-group">
    <input type="text" class="form-control form-input" id="last_name-signup" placeholder="Last name" aria-label="Last name">
  </div>
  <div class="col-auto form-group">
    <input type="email" class="form-control form-input" id="email-signup"  placeholder="email">
  </div>
  <div class="col-auto form-group">
    <input type="password" class="form-control form-input" id="password-signup"  placeholder="password">
  </div>
   <div class="col-12 form-group">
    <button type="submit" class="btn btn-primary" id="signup-button">Sign in</button>
  </div>
</div>

  </div>
</div>

<script src="./js/login.js"></script>