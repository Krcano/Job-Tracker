<div class=>
  <div class=>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>


{{!-- FORM LAYOUT --}}
<form class="form new-project-form">
    <div class="form-group">
    <label for="job-title">job title:</label>
    <input class="form-input" type="text" id="job-title" name="job-title"/>
    </div>
  
    <div class="form-group">
    <label for="job-desc">description:</label>
    <textarea class="form-input" id="job-desc" name="job-desc"></textarea>
    </div>
     <div class="form-group">
    <label for="job-salary">salary:</label>
    <textarea class="form-input" id="job-salary" name="job-salary"></textarea>
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>






{{!-- CARD LAYOUT --}}

{{#if jobs.length}}
<div class="container">

{{!-- Created each individual card --}}
{{#each jobs as |job| }}
<div class="card-container">
  <div class="card-heading">
    <h2>{{job.title}}</h2>
    </div> 
  <div class="card-content">
      <h3>{{job.company}}</h3>
      <h3>{{job.description}}</h3>
      <h3>{{job.salary}}</h3>
      <a href="{{job.url}}"><h3>{{job.url}}</h3></a>
      {{!--drop down menu --}}
      <form action="#">
       <label for="status">Status: </label>
       <select>
        <option value="Applied">Applied</option>
        <option value="Interviewing">Interviewing</option>
        <option value="Onboarding">Onboarding</option>
        <option value="Rejected">Rejected</option>
        </select>
        {{!-- <input type="submit" value="Submit" /> --}}
        </form>
  </div> 
</div>
{{/each}}
</div>
{{/if}}